{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/backend/*": ["../lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "public", ".cache"]
}
